<Page x:Class="ShippingCompany.Page.AddPage.AddShip"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShippingCompany.Page.AddPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddShip">

    <Grid>
        <StackPanel Width="320"
                    VerticalAlignment="Center">

            <GroupBox Header="Введите наименование корабля:" BorderThickness="0">
                <TextBox
                    Name="TxbNamePort"/>
            </GroupBox>

            <GroupBox Header="Введите тип корабля:" BorderThickness="0">
                <TextBox
                    Name="TxbTimeShip"/>
            </GroupBox>
            <GroupBox Header="Введите вмещяемость корабля:" BorderThickness="0">
                <TextBox
                    Name="TxbTimePort"/>
            </GroupBox>
            <Button 
                Name="BtnCreate"
                Content="Добавить корабль"
                Click="BtnCreate_Click"
                Style="{StaticResource BtnAll}"/>
            <Button Name="BtnBack"
                    Style="{StaticResource BtnAll}"
                    Click="BtnBack_Click"
                    Content="Назад" />
        </StackPanel>
    </Grid>
</Page>
